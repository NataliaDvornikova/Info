#include <iostream>
#include <locale>
#include <cmath>
using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian");
    double a,b;
    cout << "Введите число a " << endl;
    cin >> a;
    cout << "Введите число b " << endl;
    cin >> b;
    double c = a + b;
    cout << a << " + " << b << " = " << c << endl;
    return 0;
}
